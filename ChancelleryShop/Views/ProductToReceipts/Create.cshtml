@model ChancelleryShop.ProductToReceipt

@{
    ViewData["Title"] = "Create";
}
<div>
    <img class="back" src="https://images.clipartlogo.com/files/images/43/437274/arrow-blue-left-clip-art_f.jpg" />
    <a class="buttons" asp-action="Index">Назад</a>
</div>
<h1 class="important">Добавить</h1>

<h4 class="important">Покупку</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label important">Номер чека</label>
                <select asp-for="ReceiptId" class ="form-control" asp-items="ViewBag.ReceiptId"></select>
            </div>
            <div class="form-group">
                <label class="control-label important">Товар</label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId "></select>
            </div>
            <div class="form-group">
                <label class="control-label important">Количество товара</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <img class="back" src="https://images.clipartlogo.com/files/images/43/437274/arrow-blue-left-clip-art_f.jpg" />
    <a class="buttons" asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
