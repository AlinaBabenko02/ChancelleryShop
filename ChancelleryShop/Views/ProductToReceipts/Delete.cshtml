@model ChancelleryShop.ProductToReceipt

@{
    ViewData["Title"] = "Delete";
}

<h1 class="important"><img class="delete" src="https://static8.depositphotos.com/1338574/828/i/600/depositphotos_8282011-stock-photo-badge-exclamation-point.jpg" /> Удаление</h1>

<h3 style="color: #1a3cb7">Вы уверены что хотите удалить это?</h3>
<div>
    <h4>Покупка</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 important">
            Чек
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Receipt.ReceiptId)
        </dd>
        <dt class="col-sm-2 important">
            Товар
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-2 important">
            Количество
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductToReceiptId" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <div>
            <img class="back" src="https://images.clipartlogo.com/files/images/43/437274/arrow-blue-left-clip-art_f.jpg" />
            <a class="buttons" asp-action="Index">Назад</a>
        </div>
    </form>
</div>
